.Header
  .Header__inner
    .Header__inner__main
      .Header__inner__main__icon 
        = link_to image_tag(src= "logo/logo.png", class: "top-image")
      .searchBox
        =form_with url: search_items_path, local: true do |form| 
          =form.text_field :content, placeholder:"キーワードから探す", class:"searchBox__input" 
          = button_tag type: 'submit', class: 'btn btn-primary' do
            =icon("fas","search")
            
    .Header__inner__nav
      %ul.nav--left
        %li= link_to 'カテゴリー',"#", class:"category"
        %li= link_to 'ブランド', "#",class:"brand"
      %ul.nav--right
        - if user_signed_in?
          %li= link_to 'マイページ',informations_path, class:"login", method: :get
        - else
          %li= link_to 'ログイン',new_user_session_path, class:"login"
          %li= link_to '新規会員登録',new_user_registration_path, class:"new"
  



  .contents.row
  - @items.each do |item|
    = render partial: "item", locals: { item: item }


