.wrapper
  %h2 住所登録情報
  .form
    = form_for(@address, url: address_path) do |f|

      .field
        = f.label :postal_code
        %br
        = f.text_field :postal_code

      .field
        = f.label :prefectures
        %br
        = f.text_field :prefectures

      .field
        = f.label :city
        %br
        = f.text_field :city

      .field
        = f.label :house_number
        %br
        = f.text_field :house_number

      .field
        = f.label :building_name
        %br
        = f.text_field :building_name

      .field
        = f.label :room_number
        %br
        = f.text_field :room_number

      .field
        = f.label :phone_number
        %br
        = f.text_field :phone_number

      .actions
        = f.submit "Next"

